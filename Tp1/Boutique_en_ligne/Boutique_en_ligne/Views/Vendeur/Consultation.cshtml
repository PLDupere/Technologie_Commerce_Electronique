@{
}

@model List<Boutique_en_ligne.Models.JeuVideo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1> page  consultation </h1>
<div class="container mt-5">
    <h2>Affichage des Jeux Vidéo</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Année de sortie</th>
                <th>Console</th>
                <th>Genre</th>
                <th>Editeur</th>
                <th>Pochette du Jeu</th>
                <th>Capture d'écran</th>
                <th>Prix de vente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jeu in Model)
            {
                <tr>
                    <td>@jeu.Id</td>
                    <td>@jeu.titre</td>
                    <td>@jeu.annee_sortie</td>
                    <td>@jeu.console</td>
                    <td>@jeu.genre</td>
                    <td>@jeu.editeur</td>
                    <td><img src="@jeu.pochette_jeu" alt="Pochette du Jeu" style="max-width: 100px; max-height: 100px;" /></td>
                    <td><img src="@jeu.capture_ecran" alt="Capture d'écran" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>@jeu.prix_vente</td>
                    <td>
                        <!-- Bouton pour modifier (à rediriger vers l'action de modification dans votre contrôleur) -->
                        <a class="btn btn-primary" href="@Url.Action("UpdateJeuVideo", "JeuVideo", new { id = jeu.Id })">Modifier</a>

                        <form asp-action="DeleteJeuVideo" asp-controller="JeuVideo" asp-route-id="@jeu.Id" method="post">
                            <input type="submit" value="Supprimer" class="btn btn-danger" />
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
