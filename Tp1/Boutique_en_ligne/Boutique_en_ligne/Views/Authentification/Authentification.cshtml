@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center"><h5 class="font-weight-bold">Formulaire de connexion</h5></div>
                <div class="card-body">
                    <form>
                        <div class="form-group mb-4">
                            <label for="email"><i class="bi bi-envelope-fill"></i> Adresse Courriel</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Votre adresse courriel" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password"><i class="bi bi-lock-fill"></i> Mot de Passe</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="confirmPassword"><i class="bi bi-lock-fill"></i> Confirmer Mot de Passe</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirmer mot de passe" required>
                        </div>
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-key-fill"></i> Se Connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

